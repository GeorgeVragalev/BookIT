@using Backend.Entities.Roles
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Backend.Models.UserModel


@{
    ViewBag.Title = "Edit users";
    Layout = "_Layout";
}

@using (Html.BeginForm("CreateUser", "Admin", Model))
{
    <h2>Create a new user</h2>
    <hr/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="@Model.Email" class="form-control form__field" autocomplete="email" aria-required="true"/>
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="@Model.FirstName" class="form-control form__field" autocomplete="username" aria-required="true"/>
        <label asp-for="@Model.FirstName"></label>
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="@Model.LastName" class="form-control form__field" autocomplete="username" aria-required="true"/>
        <label asp-for="@Model.LastName"></label>
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        Role: @Html.DropDownListFor(r=>r.Role, Enum.GetValues(typeof(RoleEnum)).Cast<RoleEnum>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }));
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create user</button>
}