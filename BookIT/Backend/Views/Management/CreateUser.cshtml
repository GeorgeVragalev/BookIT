@using Backend.Entities.Roles
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Backend.Models.UserModel


@{
    ViewBag.Title = "Edit users";
    Layout = "_Layout";
}

@using (Html.BeginForm("CreateUser", "Admin", Model))
{
    
    <div class="row">
        <div class="col-md-4">
            <h2>Create a new user</h2>
            <div class="horizontal-line"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 4rem"></div>
            <div class="form-floating auth-container__form--usual" style="margin-top: 4rem">
                <input asp-for="@Model.Email" class="form-control"  aria-required="true"/>
                <label asp-for="@Model.Email"></label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating auth-container__form--usual">
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true"/>
                <label asp-for="@Model.FirstName"></label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating auth-container__form--usual">
                <input asp-for="@Model.LastName" class="form-control" aria-required="true"/>
                <label asp-for="@Model.LastName"></label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating auth-container__form--usual">
                Role: @Html.DropDownListFor(r=>r.Role, Enum.GetValues(typeof(RoleEnum)).Cast<RoleEnum>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }))
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="button--save" style="background-color: #f2208a">Create</button>
                </div>
        </div>
    </div>
    
    <style>
    
    .auth-container__form--usual{
    margin-top: 1rem;
    }
    
        .horizontal-line{ 
            float: left;
             border-bottom: 3px solid #f2208a;
             width: 60vw;
        }
        
        select {
        background-color: #fefefe;
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 1rem 0.75rem;
        height: calc(3.5rem + 2px);
        }
        
        option {
        height: calc(3.5rem + 2px);
        }
        
        option:focus-within {
        background-color: #f2208a;
        color: white;
        
        }
    </style>
}