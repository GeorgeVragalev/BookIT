@using Backend.Entities.Roles
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Backend.Models.UserModel

@{
    ViewBag.Title = "Edit users";
    Layout = "_Layout";
}

@using (Html.BeginForm("UpdateUser", "Management", Model))
{
    <h2>Edit user with id: @Model.Id</h2>
    <hr/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating">
        <input asp-for="@Model.Email" class="form-control" aria-required="true"/>
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="@Model.FirstName" class="form-control" aria-required="true"/>
        <label asp-for="@Model.FirstName"></label>
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="@Model.LastName" class="form-control" aria-required="true"/>
        <label asp-for="@Model.LastName"></label>
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>

    @if (Model != null && Model.Student != null)
    {
        <div class="form-floating">
            <input asp-for="@Model.Student.Group" class="form-control" autocomplete="username" aria-required="true"/>
            <label asp-for="@Model.Student.Group"></label>
            <span asp-validation-for="@Model.Student.Group" class="text-danger"></span>
        </div>
    }
    else if (Model != null && Model.Teacher != null)
    {
        <div class="form-floating">
            <input asp-for="@Model.Teacher.Department" class="form-control" autocomplete="username" aria-required="true"/>
            <label asp-for="@Model.Teacher.Department"></label>
            <span asp-validation-for="@Model.Teacher.Department" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="@Model.Teacher.Quote" class="form-control" autocomplete="username" aria-required="true"/>
            <label asp-for="@Model.Teacher.Quote"></label>
            <span asp-validation-for="@Model.Teacher.Quote" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="@Model.Teacher.AboutMe" class="form-control" autocomplete="username" aria-required="true"/>
            <label asp-for="@Model.Teacher.AboutMe"></label>
            <span asp-validation-for="@Model.Teacher.AboutMe" class="text-danger"></span>
        </div>
        <div class="form-floating">
            Role: @Html.DropDownListFor(r => r.Teacher.Lessons, Model.Teacher.Lessons?.Select(x => new SelectListItem {Text = x.Id.ToString(), Value = x.Name.ToString()}));
        </div>
    }

    <div class="form-floating">
        Role: @Html.DropDownListFor(r => r.Role, Enum.GetValues(typeof(RoleEnum)).Cast<RoleEnum>().Select(x => new SelectListItem {Text = x.ToString(), Value = ((int) x).ToString()}));
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Update user</button>
}