@using Microsoft.AspNetCore.Mvc.Rendering
@using Backend.Entities.Roles
@model Backend.Models.UserModel

@{
    ViewBag.Title = "User registration";
}

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-antiforgery="true">
            <h2>Create a new account.</h2>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                Role: @Html.DropDownListFor(r=>r.Role, Enum.GetValues(typeof(RoleEnum)).Cast<RoleEnum>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }));
            </div>

            <button id="registerSubmit" style="width: auto" type="submit" class="w-100 btn btn-lg btn-primary">Create user</button>
        </form>
    </div>
</div>