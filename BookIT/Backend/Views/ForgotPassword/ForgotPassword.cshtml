@model Backend.Models.ForgotPasswordModel

@{
    ViewBag.Title = "Forgot you password lohule?";
}

<div class="auth">
    <img src="~/logo.png" width="20%"  style="margin-top: 20rem; height: fit-content;"/>
    <div class="auth__form">
        <form method="post">
            <h1 class="auth-container__welcome-msg">Forgot Passwor?</h1>
            <h2 class="auth-container__welcome-msg--tiny">Don't worry, just enter your email</h2>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="auth-container__form">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control auth-container__form-item" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="align-content-center">
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </div>
                <div class="auth-form--footer">
                    @* <p> *@
                    @*     <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a> *@
                    @* </p> *@
                    @* <p> *@
                    @*     <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> *@
                    @* </p> *@
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
        </form>
    </div>
</div>