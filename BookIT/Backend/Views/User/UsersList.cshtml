@model List<Backend.Entities.Users.User>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<link href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="container">
    <div class="table-responsive">
        <table id="myUserTable" class="table table-bordered">
            <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
            </tr>
            </thead>
        </table>
    </div>
</div>


<script>
       $(document).ready(
           function () {
           $('#myUserTable').DataTable(
               {
                   ajax: {
                       url: "GetUsersList",
                       type: "POST",
                   },
                   processing: true,
                   serverSide: true,
                   filter: true,
                   columns: [
                       { data: "email", name: "Email" },
                       { data: "firstName", name: "FirstName" },
                       { data: "lastName", name: "LastName" },
                       { data: "phoneNumber", name: "PhoneNumber" },
                   ],
                    columnDefs: [{
                       "defaultContent": "-",
                       "targets": "_all"
                     }]
               }
           );
       });
</script>