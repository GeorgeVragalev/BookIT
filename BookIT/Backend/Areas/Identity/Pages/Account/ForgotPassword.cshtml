@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr/>
<div class="auth">
    <img src="~/logo.png" width="20%"  style="margin-top: 20rem; height: fit-content;"/>
    <div class="auth__form">
        <form method="post">
            <h1 class="auth-container__welcome-msg">Forgot Passwor?</h1>
            <h2 class="auth-container__welcome-msg--tiny">Don't worry, just enter your email</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="auth-container__form">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control auth-container__form-item" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br/>
            <div class="align-content-center">
                <button type="submit" class="button--auth"><i class="bi bi-arrow-right"></i></button>
            </div>
            
            <div class="auth-form--footer">
                @* <p> *@
                @*     <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a> *@
                @* </p> *@
                @* <p> *@
                @*     <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> *@
                @* </p> *@
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div> 

            @*Do not remote or style this*@
            <input id="input-token" hidden="hidden" asp-for="Input.Token"/>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <partial name="_Recaptcha"/>
}