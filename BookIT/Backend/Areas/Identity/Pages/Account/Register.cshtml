@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="auth">
    <img src="~/logo.png" width="20%"  style="margin-top: 20rem; height: fit-content;"/>
    <div class="auth__form">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
             <h1 class="auth-container__welcome-msg">Register</h1>
            <h2 class="auth-container__welcome-msg--tiny">Start your journey here</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="auth-container__form">
                <label class="form-label" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control auth-container__form-item" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="auth-container__form">
                <label class="form-label" asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control auth-container__form-item" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="auth-container__form">
                <label class="form-label" asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control auth-container__form-item" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="auth-container__form">
                <label class="form-label" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control auth-container__form-item" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="auth-container__form">
                <label class="form-label" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control auth-container__form-item" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br/>
            <div class="align-content-center">
                <button id="registerSubmit" type="submit" class="button--auth"><i class="bi bi-arrow-right"></i></button>
            </div>
            
            <div class="auth-form--footer">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                @* <p> *@
                @*     <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> *@
                @* </p> *@
                @* <p> *@
                @*     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
                @* </p> *@
            </div> 
            
            @*Do not remote or style this*@
             <input id="input-token" hidden="hidden" asp-for="Input.Token"/>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_Recaptcha"/>
}
