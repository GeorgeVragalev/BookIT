@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "_Layout.cshtml";
    }
}

<div>
    <div class="row">
        <div class="col-md-3" style="margin-right:10px;background: #eaeaf6; margin-left:2rem; 
        border-radius: 40px 0 0 0; height: calc(100vh - 160px); padding: 2rem;">
            <h2 style="color: #f2208a;">Manage your account</h2>
            <hr style="border-top: 3px solid #f2208a; background: #f2208a; 
                opacity: 1; border-radius: 0 90% 90% 0; width: 80vw;"/>
            <partial name="_ManageNav"/>
        </div>
        <div class="col-md-8" style="margin-top: 10.5rem">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
